@using SidekickApp_MAUIHybridMobile.SignalR;
@page "/"
@inject SignalRService SignalRService

<h1>Hello, world!</h1>

Welcome to your new app.

<button @onclick="StartSignalRConnection">Start Connection</button>
<button @onclick="SendSampleMessage">Send Message</button>

@code {
    private async Task StartSignalRConnection()
    {
        await SignalRService.StartConnectionAsync("https://your-server-url/chatHub");
    }

    private async Task SendSampleMessage()
    {
        await SignalRService.SendMessageAsync("User1", "Hello World!");
    }
}
